<%= form_with(model: post)  do |form| %>
    <% if post.errors.any? %>
        <div>
            <% post.errors.full_messages.each do |msg| %>
                <div><%= msg %></div>
            <% end %>
        </div>
    <% end %>
    <p>
        <%= form.label :title %> </br>
        <%= form.text_field :title %>
    </p>

    <p>
        <%= form.label :body %> </br>
        <%= form.text_area :body %>
    </p>

    <p>
        <%= form.submit %>
    </p>
<% end %>